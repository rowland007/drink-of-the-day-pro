<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randarlabs.android.drinks.pro" 
    android:versionName="2.0.3" android:versionCode="1">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="14"/> 
    <application 
        android:icon="@drawable/icon96" 
        android:label="@string/app_name" 
		android:persistent="false"
		android:theme="@android:style/Theme.NoTitleBar">
        <activity 
            android:name="com.randarlabs.android.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.randarlabs.Constructor"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
      </application>
</manifest> 